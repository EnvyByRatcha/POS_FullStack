generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id() @default(autoincrement())
  name     String
  username String
  password String
  level    Role       @default(EMPLOYEE)
  status   String     @default("use")
  BillSale BillSale[]
}

enum Role {
  ADMIN
  EMPLOYEE
  CEO
}

model FoodType {
  id       Int        @id @default(autoincrement())
  name     String
  status   String     @default("use")
  FoodSize FoodSize[]
  Taste    Taste[]
  Food     Food[]
}

model FoodSize {
  id             Int              @id @default(autoincrement())
  name           String
  addMoney       Int              @default(0)
  status         String           @default("use")
  foodTypeId     Int
  FoodType       FoodType         @relation(fields: [foodTypeId], references: [id])
  SaleTempDetail SaleTempDetail[]
  BillSaleDetail BillSaleDetail[]
}

model Taste {
  id             Int              @id @default(autoincrement())
  name           String
  status         String           @default("use")
  foodTypeId     Int
  FoodType       FoodType         @relation(fields: [foodTypeId], references: [id])
  SaleTempDetail SaleTempDetail[]
  BillSaleDetail BillSaleDetail[]
}

model Food {
  id             Int              @id @default(autoincrement())
  name           String
  foodType       String           @default("food")
  price          Int
  img            String
  status         String           @default("use")
  foodTypeId     Int
  FoodType       FoodType         @relation(fields: [foodTypeId], references: [id])
  SaleTemp       SaleTemp[]
  SaleTempDetail SaleTempDetail[]
  BillSaleDetail BillSaleDetail[]
}

model SaleTemp {
  id             Int              @id @default(autoincrement())
  foodId         Int
  qty            Int
  price          Int
  tableNo        Int
  userId         Int
  Food           Food             @relation(fields: [foodId], references: [id])
  addMoney       Int?
  tasteId        Int?
  SaleTempDetail SaleTempDetail[]
}

model SaleTempDetail {
  id         Int       @id @default(autoincrement())
  saleTempId Int
  qty        Int       @default(1)
  addMoney   Int?
  foodSizeId Int?
  tasteId    Int?
  foodId     Int
  remark     String?
  Food       Food      @relation(fields: [foodId], references: [id])
  SaleTemp   SaleTemp  @relation(fields: [saleTempId], references: [id])
  Taste      Taste?    @relation(fields: [tasteId], references: [id])
  FoodSize   FoodSize? @relation(fields: [foodSizeId], references: [id])
}

model BillSale {
  id             Int              @id @default(autoincrement())
  createdDate    DateTime         @default(now())
  payDate        DateTime         @default(now())
  amount         Int
  payType        String
  userId         Int
  inputMoney     Int
  returnMoney    Int
  tableNo        Int
  invoice        String?
  status         String           @default("use")
  User           User             @relation(fields: [userId], references: [id])
  BillSaleDetail BillSaleDetail[]
}

model BillSaleDetail {
  id         Int       @id @default(autoincrement())
  billSaleId Int
  qty        Int
  addMoney   Int?
  foodSizeId Int?
  tasteId    Int?
  foodId     Int
  price      Int?
  BillSale   BillSale  @relation(fields: [billSaleId], references: [id])
  Food       Food      @relation(fields: [foodId], references: [id])
  FoodSize   FoodSize? @relation(fields: [foodSizeId], references: [id])
  Taste      Taste?    @relation(fields: [tasteId], references: [id])
}

model Organization {
  id        Int     @id @default(autoincrement())
  name      String
  address   String
  phone     String?
  email     String?
  website   String?
  promptPay String?
  logo      String?
  taxCode   String
}
